{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

   {# {{ dump(app.user.roles) }} #}

    <nav>
        <div id="logo"></div>
        <div id="menu">
            <a href="{{ path('app_product') }}"> <p>Articles</p></a>
           <p>Categories</p>
            {% if app.user.roles ==['ROLE_ADMIN', 'ROLE_USER'] %}
                 <a href="{{ path('admin') }}"><p style=" color :#A72329">Dasboard</p></a>
            {% endif %}
        </div>
        {% if app.user %}
        <a href="{{ path('app_logout') }}" style="text-decoration: none"> <div id="panier" > Deconnection <img id="logout" src="{{ asset('images/logout.png') }}" alt="logout"></div></a>
        {% endif %}
    </nav>

    <div id="Container">


        <div id="containerLeft">
            <div id="imageleft" style="background-image:url('{{ asset('images/products/'~firstProduct.image) }}') ; background-size:cover  "></div>
            <div id="detailsL">
                <span id="prix">{{ firstProduct.price }}$</span>
                <span id="nom" style="color: #ecfb04"> {{ firstProduct.name }}</span>
                <span id="description" > Description : {{ firstProduct.description }}</span>
            </div>

        </div>

        <div id="containerRight">
          {% for i in fourProduct %}
            <div id="product" >
                <div id="image"  style="background-image:url('{{ asset('images/products/'~i.image) }}') ; background-size:cover  " ></div>
                <div id="details">
                    <span id="nom"> {{ i.name }}</span>
                    <span id="prix">{{ i.price }}$ </span>
                    <span id="voirPlus"> Voir plus </span>
                </div>
            </div>  {% endfor %}
        </div>

    </div>

    <div id="containerdown">
        {% for a in products %}
        <div id="product" >
            <div id="image"  style="background-image:url('{{ asset('images/products/'~a.image) }}') ; background-size:cover  "></div>
            <div id="details">
                <span id="nom"> {{ a.name }}</span>
                <span id="prix">{{ a.price }}$ </span>
                <span id="voirPlus"> Voir plus </span>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(products) }}
    </div>

