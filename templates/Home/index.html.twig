            text-decoration: none;
            color: black;
            font-weight: bold;
            margin: 20px;
        }

        #menu p:hover:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 4px;
            bottom: -1px;
            left: 0;
            background-color: #BB7AC3;
            transform-origin: center;
            animation: wave 0.40s ease-out;
        }

        @keyframes wave {
            0% {
                transform: scale(1, 0.1);
                opacity: 0.2;
            }
            100% {
